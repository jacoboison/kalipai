<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mx_integritas_invoice_form_inherit" model="ir.ui.view">
            <field name="name">mx.invoice.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
             <xpath expr="//page[last()]" position="before"> 
                <page string="Datos Addenda" name="Datos Addenda">
                <group name="Datos Addenda">
                    

                    <field name="mx_integritas_no_pedido"/>
                    
                    <field name="mx_integritas_fecha_pedido"/> 
                    
                    <field name="mx_integritas_no_recepcion"/>
                   
                    <field name="mx_integritas_fecha_recepcion"/>
        
                    <field name="mx_integritas_no_cita"/>

                    <field name="mx_integritas_cons"/>
                    <field name="mx_integritas_emp"/>
                    <field name="mx_integritas_no_contrarecibo"/>

                    
                 </group>
                 </page>
              </xpath>        
                 
            </field>
        </record>
    </data>
</odoo>
